#! /usr/bin/env ruby

require 'optparse'
require_relative '../rb/liker'

File.write('likes.int', 0)
ports  = (5001..(5000 + (ARGV.first || 3).to_i))
likers = ports.map do |port|
  liker = Liker.new(port, ports)
  liker.start!
  liker
end

Signal.trap("INT") do
  likers.each(&:stop!)
end

likers.each do |liker|
  liker.wait!
end
